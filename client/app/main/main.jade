md-content.md-padding(layout="column" flex layout-align="start center" ng-if="isLoggedIn()")
	h1 Feed


	md-card(ng-repeat="person in persons" layout="column")
		md-card-title
			md-card-title-text
				span.md-headline {{person.firstName }}  {{person.lastName}}
				span.md-subhead {{person.pronouns}}

		md-card-content
			p {{person.headline}}

		md-card-actions(layout="row" layout-align="end center")
			md-button Wave
			md-button Waive