div(ng-include='"components/shell/shell.html"')

md-content.md-padding(flex)
  md-card.login-card
    md-card-content
      h2.md-title Login
      form(name='form', ng-submit='login(form)', novalidate='')
        md-input-container
          label Email
          input(required='', type='email', name='email', ng-model='user.email')
          div(ng-messages='form.email.$error')
            div(ng-message='required') This is required.
        md-input-container
          label Password
          input(required='', type='password', name='password', ng-model='user.password')
          div(ng-messages='form.password.$error')
            div(ng-message='required') This is required.
        div(layout="row" layout-align="center center")
          md-button.md-primary.md-raised(type='submit') Login
          
  .love-message
    md-button.md-raised.md-accent( type='submit', href='/signup') Register